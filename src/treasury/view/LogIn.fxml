<AnchorPane id="AnchorPane" fx:id="anchorPane" onMouseClicked="#unfocus" prefHeight="600.0" prefWidth="500.0" styleClass="logintheme" stylesheets="@GraphicController.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="treasury.view.LogInController">
   <children>
      <TextField fx:id="name" focusTraversable="false" layoutX="161.0" layoutY="210.0" prefHeight="39.0" prefWidth="185.0" promptText="%name" styleClass="logintextfield" stylesheets="@GraphicController.css">
         <font>
            <Font name="AppleGothic Regular" size="15.0" />
         </font></TextField>
      <Label alignment="CENTER" layoutX="136.0" layoutY="409.0" prefHeight="18.0" prefWidth="197.0" text="%noaccount" textFill="#ffab00">
         <font>
            <Font name="AppleGothic Regular" size="13.0" />
         </font></Label>
      <Button alignment="CENTER" focusTraversable="false" layoutX="163.0" layoutY="436.0" mnemonicParsing="false" onAction="#handleSignUp" prefHeight="31.0" prefWidth="176.0" styleClass="loginbuttons" stylesheets="@GraphicController.css" text="%signup">
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
         <font>
            <Font name="AppleGothic Regular" size="13.0" />
         </font></Button>
      <Button fx:id="loginButton" alignment="CENTER" focusTraversable="false" layoutX="163.0" layoutY="312.0" mnemonicParsing="false" onAction="#handleLogIn" prefHeight="31.0" prefWidth="176.0" styleClass="loginbuttons" stylesheets="@GraphicController.css" text="%login">
         <font>
            <Font name="AppleGothic Regular" size="13.0" />
         </font></Button>
      <Button focusTraversable="false" layoutX="183.0" layoutY="560.0" mnemonicParsing="false" onAction="#handleTerms" style="-fx-background-color: transparent;" styleClass="lettersbutton" text="%terms" textFill="#eb9800">
         <font>
            <Font name="AppleGothic Regular" size="13.0" />
         </font>
      </Button>
      <PasswordField fx:id="password" focusTraversable="false" layoutX="161.0" layoutY="260.0" prefHeight="39.0" prefWidth="185.0" promptText="%password" styleClass="logintextfield" stylesheets="@GraphicController.css">
         <font>
            <Font name="AppleGothic Regular" size="15.0" />
         </font></PasswordField>
      <Button fx:id="switchLanguageButton" focusTraversable="false" layoutX="418.0" layoutY="23.0" mnemonicParsing="false" onAction="#handleLanguageSwitch" prefHeight="35.0" prefWidth="61.0" styleClass="langbutton" stylesheets="@GraphicController.css" />
      <CheckBox fx:id="keepLoggedInBox" focusTraversable="false" layoutX="168.0" layoutY="352.0" mnemonicParsing="false" onAction="#handleKeepLoggedIn" prefHeight="28.0" prefWidth="165.0" stylesheets="@GraphicController.css" text="%keep" textFill="#ffab00">
         <font>
            <Font name="AppleGothic Regular" size="13.0" />
         </font></CheckBox>
      <Separator layoutX="158.0" layoutY="387.0" prefHeight="15.0" prefWidth="188.0" />
      <Label fx:id="alert" layoutX="17.0" layoutY="216.0" prefHeight="85.0" prefWidth="135.0" text="%inwalidpassandname" textAlignment="CENTER" textFill="RED" visible="false" wrapText="true" />
   </children>
</AnchorPane>
